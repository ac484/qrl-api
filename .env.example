# Flask Configuration
FLASK_ENV=production
DEBUG=False
PORT=8080
HOST=0.0.0.0

# Redis Configuration
# Option 1: Use REDIS_URL for Redis Cloud (recommended)
REDIS_URL=redis://default:your_redis_password@your-redis-host.com:6379/0

# Option 2: Use individual parameters (fallback)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# MEXC API Configuration
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here
MEXC_BASE_URL=https://api.mexc.com
MEXC_WS_URL=wss://wbs.mexc.com/ws
MEXC_TIMEOUT=10

# Sub-Account Configuration (Optional)
# MEXC v3 API supports two distinct sub-account systems:
# 
# 1. SPOT API (for regular users):
#    - Uses numeric subAccountId
#    - Supports universal transfers between account types (SPOT, MARGIN, ETF, CONTRACT)
#    - Available to all MEXC users
#
# 2. BROKER API (for broker/institutional accounts):
#    - Uses string subAccount name
#    - Requires special broker account permissions
#    - Provides more comprehensive sub-account management features
#
# Choose your sub-account mode:
SUB_ACCOUNT_MODE=SPOT
# Set to true if you have a MEXC broker account:
IS_BROKER_ACCOUNT=false

# For SPOT API mode (regular users):
# Provide the numeric sub-account ID
# Example: SUB_ACCOUNT_ID=123456
# SUB_ACCOUNT_ID=

# For BROKER API mode (broker accounts):
# Provide the sub-account name (string)
# Example: SUB_ACCOUNT_NAME=trading_account_001
# SUB_ACCOUNT_NAME=

# Trading Configuration
TRADING_PAIR=QRL/USDT
TRADING_SYMBOL=QRLUSDT

# Strategy Parameters
MA_SHORT_PERIOD=7
MA_LONG_PERIOD=25
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Risk Control
MAX_DAILY_TRADES=5
MIN_TRADE_INTERVAL=300
STOP_LOSS_PCT=0.03
TAKE_PROFIT_PCT=0.05
MAX_POSITION_SIZE=0.3

# Position Management
CORE_POSITION_PCT=0.70
USDT_RESERVE_PCT=0.20

# Redis Cache TTL Configuration (in seconds)
# Adjust these values to control how long data is cached
CACHE_TTL_PRICE=30           # Current price (default: 30s)
CACHE_TTL_TICKER=60          # 24hr ticker statistics (default: 60s)
CACHE_TTL_ORDER_BOOK=10      # Order book depth (default: 10s)
CACHE_TTL_TRADES=60          # Recent trades (default: 60s)
CACHE_TTL_KLINES=300         # Klines/candlesticks (default: 300s / 5min)
CACHE_TTL_ACCOUNT=120        # Account balance (default: 120s / 2min)
CACHE_TTL_ORDERS=30          # Orders (open/history) (default: 30s)

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
