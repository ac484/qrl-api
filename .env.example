# Flask Configuration
FLASK_ENV=production
DEBUG=False
PORT=8080
HOST=0.0.0.0

# Redis Configuration
# Option 1: Use REDIS_URL for Redis Cloud (recommended)
REDIS_URL=redis://default:your_redis_password@your-redis-host.com:6379/0

# Option 2: Use individual parameters (fallback)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# MEXC API Configuration
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here
MEXC_BASE_URL=https://api.mexc.com
MEXC_WS_URL=wss://wbs.mexc.com/ws
MEXC_TIMEOUT=10

# Trading Configuration
TRADING_PAIR=QRL/USDT
TRADING_SYMBOL=QRLUSDT

# Strategy Parameters
MA_SHORT_PERIOD=7
MA_LONG_PERIOD=25
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Risk Control
MAX_DAILY_TRADES=5
MIN_TRADE_INTERVAL=300
STOP_LOSS_PCT=0.03
TAKE_PROFIT_PCT=0.05
MAX_POSITION_SIZE=0.3

# Position Management
CORE_POSITION_PCT=0.70
USDT_RESERVE_PCT=0.20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Optional: Context7 API Key for MCP (if using VSCode MCP integration)
# CONTEXT7_API_KEY=your_context7_api_key_here
